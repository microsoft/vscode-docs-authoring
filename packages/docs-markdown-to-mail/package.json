{
	"name": "docs-markdown-to-mail",
	"displayName": "docs-markdown-to-mail",
	"description": "Docs Markdown to Mail Extension",
	"aiKey": "0a0e5961-85c2-451a-bce8-6a54e37c93be",
	"version": "0.0.1",
	"publisher": "docsmsft",
	"icon": "images/docs-logo-ms.png",
	"bugs": {
		"url": "https://github.com/Microsoft/vscode-docs-authoring/issues"
	},
	"homepage": "https://github.com/Microsoft/vscode-docs-authoring/tree/master/docs-markdown-to-mail",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-docs-authoring.git"
	},
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Snippets",
		"Other"
	],
	"keywords": [
		"markdown",
		"commonmark",
		"dfm",
		"docfx"
	],
	"activationEvents": [
		"onLanguage:markdown",
		"onLanguage:yaml"
	],
	"main": "./dist/extension",
	"contributes": {
		"markdown.markdownItPlugins": true,
		"commands": [
			{
				"command": "signInPrompt",
				"title": "Send as email",
				"category": "Docs"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "signInPrompt",
					"group": "Docs"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"prettier": "prettier --write \"**/*.{ts,js,json,yml}\"",
		"prettier-check": "prettier --check \"**/*.{ts,js,json,yml}\" --loglevel debug",
		"pretest": "npm run compile",
		"test": "node ./out/src/test/runTest.js",
		"lint": "eslint . --ext .ts",
		"precommit": "pretty-quick --staged --pattern \"**/*.{ts,js,json,yml}\"",
		"pre-push": "cd ../.. && yarn run compile && yarn run lint"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged --pattern \"**/*.{ts,js,json,yml}\"",
			"pre-push": "yarn run pre-push"
		}
	},
	"devDependencies": {
		"@types/chai": "^4.2.11",
		"@types/chai-spies": "^1.0.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^6.0.40",
		"@typescript-eslint/eslint-plugin": "^2.34.0",
		"@typescript-eslint/eslint-plugin-tslint": "^2.34.0",
		"@typescript-eslint/parser": "^2.34.0",
		"@microsoft/microsoft-graph-client": "^2.0.0",
		"isomorphic-fetch": "^2.2.1",
		"chai": "^4.2.0",
		"chai-spies": "^1.0.0",
		"eslint": "^7.0.0",
		"eslint-import-resolver-webpack": "^0.12.1",
		"eslint-plugin-import": "^2.20.2",
		"husky": "^4.2.5",
		"markdown-it": "^8.4.2",
		"mocha": "^7.1.1",
		"mocha-junit-reporter": "^1.23.3",
		"nyc": "^15.0.0",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"sinon": "^9.0.2",
		"terser-webpack-plugin": "^2.3.5",
		"ts-loader": "^6.2.2",
		"ts-node": "^8.10.1",
		"tslint": "^5.20.1",
		"typescript": "^3.7.5",
		"vscode": "^1.1.36",
		"vscode-test": "^1.3.0",
		"webpack": "^4.42.1",
		"webpack-bundle-analyzer": "^3.6.1",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"axios": "^0.19.0",
		"glob": "^7.1.6",
		"js-yaml": "^3.13.1",
		"markdown-it-front-matter": "^0.2.1",
		"markdown-it-include": "^1.1.0",
		"markdown-it-style": "^1.0.0",
		"moment": "^2.24.0",
		"os": "^0.1.1",
		"vscode-extension-telemetry": "^0.1.1"
	}
}
