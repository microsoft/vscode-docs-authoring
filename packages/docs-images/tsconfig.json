{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"lib": ["es6"],
		"sourceMap": true,
		"rootDir": "."
	},
	"include": ["src/**/*", ".eslintrc.js"],
	"exclude": ["node_modules", ".vscode-test"]
}
