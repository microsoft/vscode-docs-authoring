{
	"name": "docs-linting",
	"displayName": "docs-linting",
	"description": "Docs Linting Extension",
	"icon": "images/docs-logo-ms.png",
	"version": "0.0.5",
	"publisher": "docsmsft",
	"homepage": "https://github.com/Microsoft/vscode-docs-authoring/tree/master/docs-linting",
	"bugs": {
		"url": "https://github.com/Microsoft/vscode-docs-authoring/issues"
	},
	"engines": {
		"vscode": "^1.22.0"
	},
	"repository": {
		"url": "https://github.com/Microsoft/vscode-docs-authoring.git"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"linting"
	],
	"activationEvents": [
		"onLanguage:markdown"
	],
	"main": "./out/src/extension",
	"commands": [],
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"prettier": "prettier --write \"**/*.{ts,js,json,yml}\"",
		"prettier-check": "prettier --check \"**/*.{ts,js,json,yml}\" --loglevel debug",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test-core": "node ./node_modules/vscode/bin/test",
		"test": "jest",
		"lint": "eslint . --ext .ts markdownlint-custom-rules/**/*.js",
		"precommit": "pretty-quick --staged --pattern \"**/*.{ts,js,json,yml}\"",
		"pre-push": "cd ../.. && yarn run compile && yarn run lint"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged --pattern \"**/*.{ts,js,json,yml}\"",
			"pre-push": "yarn run pre-push"
		}
	},
	"dependencies": {
		"axios": "^0.19.0",
		"markdownlint": "^0.11.0",
		"matcher": "^1.0.0",
		"typescript-collections": "^1.2.3"
	},
	"devDependencies": {
		"@types/jest": "24.0.12",
		"@types/node": "^7.10.5",
		"@typescript-eslint/eslint-plugin": "^2.34.0",
		"@typescript-eslint/eslint-plugin-tslint": "^2.34.0",
		"@typescript-eslint/parser": "^2.34.0",
		"eslint": "^7.0.0",
		"eslint-plugin-import": "^2.20.2",
		"husky": "^4.2.5",
		"jest": "^24.7.1",
		"jest-junit": "^6.3.0",
		"mocha": "^7.1.1",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"ts-jest": "^24.0.2",
		"tslint": "^5.20.1",
		"typescript": "^3.9.3",
		"vscode": "^1.1.33"
	},
	"jest": {
		"verbose": true,
		"preset": "ts-jest",
		"roots": [
			"<rootDir>/test",
			"<rootDir>/src"
		],
		"moduleFileExtensions": [
			"ts",
			"js",
			"json",
			"node"
		],
		"coverageReporters": [
			"text-summary",
			"cobertura",
			"html"
		],
		"reporters": [
			"default",
			"jest-junit"
		],
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*"
		]
	},
	"jest-junit": {
		"output": "test-results-jest.xml",
		"usePathForSuiteName": "true"
	},
	"license": "MIT"
}
